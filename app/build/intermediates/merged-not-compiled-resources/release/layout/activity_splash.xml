<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/splash_gradient"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/splash_gradient_2"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="50dp"
        android:layout_centerInParent="true"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgLogoHang"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:src="@drawable/hang_tv_logo"
            android:layout_centerHorizontal="true"/>


        <ImageView
            android:id="@+id/imgGif"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:src="@drawable/load_video_gif_compp"
            android:layout_below="@id/imgLogoHang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"/>

        <TextView
            android:id="@+id/txtWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="17sp"
            android:textColor="#2f2f2f"
            android:textAlignment="center"
            android:text="@string/splash_adverb"
            android:layout_below="@id/imgGif"/>

    </RelativeLayout>

</RelativeLayout>