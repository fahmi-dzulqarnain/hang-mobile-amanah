<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="25dp"
    android:paddingBottom="8dp">

        <TextView
            android:id="@+id/txtNoInt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Informasi Streaming HangTV"
            android:textStyle="bold"
            android:textColor="#222"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txtNoInt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txtNoInt1"
            android:layout_marginTop="12dp"
            android:textColor="#222"
            android:layout_marginEnd="10dp"
            android:text="Terkadang, streaming tidak tersedia. Apabila player tidak memunculkan apa-apa, periksa kembali koneksi Anda, apabila masih tidak ada maka streaming sedang tidak tersedia."/>

        <Button
            android:id="@+id/btnOKEnoStream"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:text="@string/oke"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:layout_below="@id/txtNoInt2"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>